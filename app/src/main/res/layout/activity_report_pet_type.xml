<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ReportPetTypeActivity">
    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
        <ImageView
                android:id="@+id/backArrow"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginStart="20dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/back_arrow"
                android:padding="5dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/keyboard_backspace_black_24dp" />
        <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:fontFamily="@font/nunito_bold"
                android:text="1/5"
                android:textSize="30dp"
                android:gravity="center"
                android:textColor="@android:color/black"/>
        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"/>

        <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:paddingLeft="30dp"
                android:fontFamily="@font/nunito_bold"
                android:text="Choose type of pet"
                android:gravity="left"
                android:textSize="25dp"
                android:layout_marginBottom="20dp"
                android:textColor="@android:color/black"/>
        <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="center">
            <LinearLayout
                    android:id="@+id/dogTypeView"
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/pet_filter_frame_selected"
                    android:orientation="vertical"
                    android:padding="10dp"
                    android:layout_marginRight="15dp"
                    app:layout_constraintBottom_toBottomOf="@+id/catTypeFilterView"
                    app:layout_constraintEnd_toStartOf="@+id/catTypeFilterView"
                    app:layout_constraintHorizontal_bias="0.5"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="@+id/catTypeFilterView">

                <ImageView
                        android:id="@+id/imageView12"
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:src="@drawable/dog" />

                <TextView
                        android:id="@+id/textView14"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:fontFamily="@font/nunito_bold"
                        android:text="Dog"
                        android:textAlignment="center"
                        android:textColor="@android:color/black" />
            </LinearLayout>
            <LinearLayout
                    android:id="@+id/catTypeView"
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:background="@drawable/pet_filter_frame_selected"
                    android:orientation="vertical"
                    android:padding="10dp"
                    app:layout_constraintBottom_toBottomOf="@+id/otherTypeFilterView"
                    app:layout_constraintEnd_toStartOf="@+id/otherTypeFilterView"
                    app:layout_constraintHorizontal_bias="0.5"
                    app:layout_constraintStart_toEndOf="@+id/dogTypeFilterView"
                    app:layout_constraintTop_toTopOf="@+id/otherTypeFilterView">

                <ImageView
                        android:id="@+id/imageView13"
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:src="@drawable/cat" />

                <TextView
                        android:id="@+id/textView15"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:fontFamily="@font/nunito_bold"
                        android:text="Cat"
                        android:textAlignment="center"
                        android:textColor="@android:color/black" />
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
                android:id="@+id/otherTypeView"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:background="@drawable/pet_filter_frame_selected"
                android:orientation="vertical"
                android:layout_gravity="center"
                android:padding="10dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toEndOf="@+id/catTypeFilterView"
                app:layout_constraintTop_toBottomOf="@+id/searchView">

            <ImageView
                    android:id="@+id/imageView14"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:src="@drawable/other" />

            <TextView
                    android:id="@+id/textView16"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:fontFamily="@font/nunito_bold"
                    android:text="Other"
                    android:textAlignment="center"
                    android:textColor="@android:color/black" />
        </LinearLayout>
        <Button
                android:id="@+id/nextReportBtn"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:layout_marginTop="150dp"
                android:background="@drawable/rounded_button"
                android:text="NEXT"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>